pkgname=postmarketos-shofel2-nintendo-nx
pkgver=0.1
pkgrel=0
pkgdesc="Script to boot kernel via USB using ShofEL2's Coreboot/U-Boot"
url="https://github.com/postmarketOS/pmbootstrap"
arch="noarch"
license="MIT"
depends="uboot-tools imx-usb-loader"
makedepends=""
install=""
source="boot.sh"
builddir="$srcdir/"

package() {
	cd "$builddir"
	install -D "$srcdir/boot.sh" \
		"$pkgdir/usr/share/postmarketos-shofel2-nintendo-nx/boot.sh"
}

