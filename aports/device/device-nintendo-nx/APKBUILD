# Reference: <https://postmarketos.org/devicepkg>
# Device tree for Nintendo Switch
# changes:
# - switch.scr from shofel2; modified to load an initramfs (for pmOS decryption)
# - initramfs hook: USB and screen firmware no longer embedded in kernel to make building kernel easier
#   so need to copy them into initramfs
pkgname="device-nintendo-nx"
pkgdesc="Nintendo Switch"
pkgver=0.1
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="noarch"
options="!check"
depends="postmarketos-base linux-nintendo-nx mesa-dri-swrast linux-firmware-nvidia linux-firmware-brcm"
makedepends="devicepkg-dev uboot-tools"
source="
	deviceinfo
	switch.scr
"

build() {
	devicepkg_build $startdir $pkgname
	# build u-boot boot script (from github.com/fail0verflow/shofel2)
	mkimage -A arm64 -T script -C none -n "boot.scr" -d "$srcdir/switch.scr" "$srcdir/switch.scr.img"
}

package() {
	devicepkg_package $startdir $pkgname
	install -D "$srcdir/switch.scr.img" \
		"$pkgdir/boot/switch.scr.img"
}

